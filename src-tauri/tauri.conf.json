{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Beads Task-Issue Tracker",
  "version": "1.1.3",
  "identifier": "com.beads.manager",
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3133",
    "beforeDevCommand": "pnpm nuxt dev --port 3133",
    "beforeBuildCommand": "pnpm generate"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "bundleVersion": "1"
    },
    "copyright": "Â© 2026 Laurent Chapin\nPowered by beads (Steve Yegge)\nVibe coded with Claude Code"
  }
}
