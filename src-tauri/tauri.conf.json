{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Beads Task-Issue Tracker",
  "version": "1.0.0",
  "identifier": "com.beads.manager",
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3133",
    "beforeDevCommand": "",
    "beforeBuildCommand": "pnpm generate"
  },
  "app": {
    "windows": [
      {
        "title": "Beads Task-Issue Tracker",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "app"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  }
}
